<resources>
    <!-- Base theme which applies to both light and dark themes -->
    <style name="Base.Theme.CSTAcademy2024" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Configure items that are common across both themes -->
    </style>

    <!-- Light Theme -->
    <style name="Theme.Childhood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/koromiko</item>
        <item name="colorPrimaryVariant">@color/mac_and_cheese</item>
        <item name="colorOnPrimary">@color/sunshade</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tequila</item>
        <item name="colorSecondaryVariant">@color/feijoa</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorButtonNormal">@color/koromiko</item>
        <item name="colorAccent">@color/aegean_blue</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Dark Theme -->
    <style name="Theme.CSTAcademy2024.Dark" parent="Base.Theme.CSTAcademy2024">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_secondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/dark_primaryVariant</item>
        <item name="colorButtonNormal">@color/koromiko</item>
        <item name="colorAccent">@color/aegean_blue</item>
        <item name="android:colorBackground">@color/iron</item>
        <!-- Add more customizations for dark theme here -->
    </style>
</resources>
