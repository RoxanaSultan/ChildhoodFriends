    <item android:state_pressed="true">
        <bitmap android:src="@drawable/delete_icon" android:alpha="0.5"/>
    </item>
    <!-- Default state -->
    <item>
        <bitmap android:src="@drawable/delete_icon" android:alpha="1.0"/>
    </item>
</selector>
