<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Favorite Places RecyclerView with Title -->
            <TextView
                android:id="@+id/text_favourite_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Places"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_favourite_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Address RecyclerView with Title -->
            <TextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Addresses"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- School RecyclerView with Title -->
            <TextView
                android:id="@+id/text_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schools"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- High School RecyclerView with Title -->
            <TextView
                android:id="@+id/text_high_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High Schools"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_high_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- College RecyclerView with Title -->
            <TextView
                android:id="@+id/text_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colleges"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
